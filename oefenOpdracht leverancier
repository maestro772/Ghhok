namespace Leverancier.Model
{
    public class LeverancierModel
    {
        public int LeverancierId { get; set; }                 // INT IDENTITY
        public string LeverancierNaam { get; set; }            // VARCHAR(150)
        public string ContactNaam { get; set; }                // VARCHAR(150)
        public string TelefoonnummerLeverancier { get; set; }  // VARCHAR(30)
        public string EmailLeverancier { get; set; }           // VARCHAR(150)
        public string Plaats { get; set; }                     // VARCHAR(100)
        public bool Actief { get; set; }                       // BIT
    }
}



------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

LeverancierController.cs (CRUD op SQL tabel Leverancier)

frmLeveranciers.cs (overzicht: ListView vullen + nav links + Toevoegen/Bewerken/Verwijderen)

frmLeverancierToevoegen.cs (opent bij toevoegen)

frmLeverancierBewerken.cs (opent bij bewerken met geselecteerde leverancier)

Model blijft EXACT zoals jij hem stuurde (namespace Voedselbank.Model).

------------------------------------------------------------------------------------------------------------------------------------------------------------------------------


1) LeverancierController.cs




Ik ga uit van SQL tabelnaam: Leverancier met kolommen:
LeverancierId, LeverancierNaam, ContactNaam, TelefoonnummerLeverancier, EmailLeverancier, Plaats, Actief
Als jouw tabel anders heet (bv Leveranciers) → vervang alleen die naam in de query’s.

using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using Voedselbank.Model;

namespace Voedselbank.Controllers
{
    public class LeverancierController
    {
        private readonly string _connectionString;

        public LeverancierController(string connectionString)
        {
            _connectionString = connectionString;
        }

        public List<LeverancierModel> GetAll()
        {
            var leveranciers = new List<LeverancierModel>();

            using (SqlConnection conn = new SqlConnection(_connectionString))
            using (SqlCommand cmd = new SqlCommand(@"
                SELECT LeverancierId, LeverancierNaam, ContactNaam, TelefoonnummerLeverancier, EmailLeverancier, Plaats, Actief
                FROM Leverancier
                ORDER BY LeverancierNaam", conn))
            {
                conn.Open();
                using (SqlDataReader reader = cmd.ExecuteReader())
                {
                    while (reader.Read())
                    {
                        leveranciers.Add(new LeverancierModel
                        {
                            LeverancierId = Convert.ToInt32(reader["LeverancierId"]),
                            LeverancierNaam = reader["LeverancierNaam"].ToString(),
                            ContactNaam = reader["ContactNaam"].ToString(),
                            TelefoonnummerLeverancier = reader["TelefoonnummerLeverancier"].ToString(),
                            EmailLeverancier = reader["EmailLeverancier"].ToString(),
                            Plaats = reader["Plaats"].ToString(),
                            Actief = Convert.ToBoolean(reader["Actief"])
                        });
                    }
                }
            }

            return leveranciers;
        }

        public int Add(LeverancierModel leverancier)
        {
            using (SqlConnection conn = new SqlConnection(_connectionString))
            using (SqlCommand cmd = new SqlCommand(@"
                INSERT INTO Leverancier (LeverancierNaam, ContactNaam, TelefoonnummerLeverancier, EmailLeverancier, Plaats, Actief)
                VALUES (@LeverancierNaam, @ContactNaam, @TelefoonnummerLeverancier, @EmailLeverancier, @Plaats, @Actief);
                SELECT SCOPE_IDENTITY();", conn))
            {
                cmd.Parameters.AddWithValue("@LeverancierNaam", leverancier.LeverancierNaam);
                cmd.Parameters.AddWithValue("@ContactNaam", leverancier.ContactNaam);
                cmd.Parameters.AddWithValue("@TelefoonnummerLeverancier", leverancier.TelefoonnummerLeverancier);
                cmd.Parameters.AddWithValue("@EmailLeverancier", leverancier.EmailLeverancier);
                cmd.Parameters.AddWithValue("@Plaats", leverancier.Plaats);
                cmd.Parameters.AddWithValue("@Actief", leverancier.Actief);

                conn.Open();
                return Convert.ToInt32(cmd.ExecuteScalar());
            }
        }

        public bool Update(LeverancierModel leverancier)
        {
            using (SqlConnection conn = new SqlConnection(_connectionString))
            using (SqlCommand cmd = new SqlCommand(@"
                UPDATE Leverancier
                SET LeverancierNaam = @LeverancierNaam,
                    ContactNaam = @ContactNaam,
                    TelefoonnummerLeverancier = @TelefoonnummerLeverancier,
                    EmailLeverancier = @EmailLeverancier,
                    Plaats = @Plaats,
                    Actief = @Actief
                WHERE LeverancierId = @LeverancierId", conn))
            {
                cmd.Parameters.AddWithValue("@LeverancierId", leverancier.LeverancierId);
                cmd.Parameters.AddWithValue("@LeverancierNaam", leverancier.LeverancierNaam);
                cmd.Parameters.AddWithValue("@ContactNaam", leverancier.ContactNaam);
                cmd.Parameters.AddWithValue("@TelefoonnummerLeverancier", leverancier.TelefoonnummerLeverancier);
                cmd.Parameters.AddWithValue("@EmailLeverancier", leverancier.EmailLeverancier);
                cmd.Parameters.AddWithValue("@Plaats", leverancier.Plaats);
                cmd.Parameters.AddWithValue("@Actief", leverancier.Actief);

                conn.Open();
                return cmd.ExecuteNonQuery() > 0;
            }
        }

        public bool Delete(int leverancierId)
        {
            using (SqlConnection conn = new SqlConnection(_connectionString))
            using (SqlCommand cmd = new SqlCommand(@"
                DELETE FROM Leverancier
                WHERE LeverancierId = @LeverancierId", conn))
            {
                cmd.Parameters.AddWithValue("@LeverancierId", leverancierId);

                conn.Open();
                return cmd.ExecuteNonQuery() > 0;
            }
        }
    }
}


